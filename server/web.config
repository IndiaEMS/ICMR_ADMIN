<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>

    <!-- ğŸš€ Increase upload size limit -->
    <security>
      <requestFiltering>
        <!-- 300 MB limit -->
        <requestLimits maxAllowedContentLength="314572800" />
      </requestFiltering>
    </security>

    <!-- ğŸŒ€ Optional: If you're using IIS URL Rewrite as reverse proxy -->
    <rewrite>
      <rules>
        <rule name="ReverseProxyInboundRule1" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:9000/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- âœ… (Optional) Enable proxy buffering if large files -->
    <proxy>
      <reverseRewriteHostInResponseHeaders>false</reverseRewriteHostInResponseHeaders>
    </proxy>

  </system.webServer>
</configuration>
